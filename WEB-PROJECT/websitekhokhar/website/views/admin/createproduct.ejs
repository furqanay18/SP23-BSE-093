<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Product | Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

  <!-- Select2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      padding: 0;
      background: url('https://www.loucampaio.com/wp-content/plugins/admin-custom-login/images/3d-background.jpg') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', sans-serif;
      color: #fff;
    }

    .glass-wrapper {
      max-width: 1100px;
      margin: 80px auto 40px;
      display: flex;
      gap: 30px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      padding: 50px;
      border-radius: 25px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
      transition: all 0.3s ease-in-out;
    }

    .glass-wrapper.light-mode {
      background: rgba(255, 255, 255, 0.85);
      color: #333;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-column {
      flex: 0 0 60%;
    }

    .image-column {
      flex: 0 0 40%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .image-column img {
      width: 90%;
      object-fit: contain;
      border-radius: 20px;
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
    }

    h2 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
    }

    .form-control,
    .form-select {
      background-color: rgba(255, 255, 255, 0.9); /* much more visible */
      border: 1px solid rgba(255, 255, 255, 0.8);
      color: #000; /* better contrast for text */
      padding: 16px 20px;
      border-radius: 15px;
      font-size: 16px;
      margin-bottom: 20px;
      transition: all 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #3f51b5;
      box-shadow: 0 0 0 0.2rem rgba(63, 81, 181, 0.25);
    }

    .btn-submit {
      background: linear-gradient(to right, #3f51b5, #5c6bc0);
      border: none;
      padding: 16px 30px;
      border-radius: 15px;
      font-weight: 600;
      width: 100%;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    .btn-submit:hover {
      background: linear-gradient(to right, #5c6bc0, #7986cb);
      transform: translateY(-3px);
    }

    .btn-submit:active {
      transform: translateY(1px);
    }

    .theme-slider {
      display: flex;
      align-items: center;
      gap: 10px;
      position: absolute;
      top: 10px;
      right: 20px;
    }

    .form-check-input {
      width: 50px;
      height: 25px;
      background-color: #ccc;
      border-radius: 20px;
      position: relative;
      appearance: none;
      cursor: pointer;
    }

    .form-check-input:checked {
      background-color: #3f51b5;
    }

    .form-check-input::before {
      content: "";
      position: absolute;
      width: 20px;
      height: 20px;
      background: white;
      border-radius: 50%;
      top: 2.5px;
      left: 2.5px;
      transition: 0.3s;
    }

    .form-check-input:checked::before {
      transform: translateX(25px);
    }

    /* Select2 dropdown improvements */
    .select2-container--default .select2-results > .select2-results__options {
      background-color: rgba(255, 255, 255, 0.9) !important;
      color: #000 !important;
      max-height: 200px;
      overflow-y: auto;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .select2-container--default .select2-results__option--highlighted[aria-selected] {
      background-color: #3f51b5 !important;
      color: #fff !important;
    }

    .select2-container--default .select2-dropdown {
      border-radius: 15px;
      border: 1px solid rgba(0,0,0,0.2);
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      background-color: rgba(255, 255, 255, 0.95);
      color: #000;
    }

    @media (max-width: 768px) {
      .glass-wrapper {
        flex-direction: column;
      }

      .form-column,
      .image-column {
        max-width: 100%;
        flex: 1;
      }

      .image-column img {
        max-width: 80%;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar with Theme Toggle Slider -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <a class="navbar-brand" href="#">Admin Panel</a>
    <div class="ms-auto theme-slider">
      <input type="checkbox" class="form-check-input" id="themeSlider" />
    </div>
  </nav>

  <!-- Product Form Layout -->
  <div class="glass-wrapper" id="wrapper">
    <div class="form-column">
      <h2><i class="fas fa-plus-circle me-2"></i> Add New Product</h2>
      <form action="" method="post" enctype="multipart/form-data" class="p-5 shadow-lg rounded">
        <div class="form-group">
          <label for="titleInput">Title</label>
          <input name="title" type="text" class="form-control" id="titleInput" placeholder="Enter Title" />
        </div>

        <div class="form-group">
          <label for="descriptionInput">Description</label>
          <textarea name="description" class="form-control" id="descriptionInput" placeholder="Enter Description" rows="4"></textarea>
        </div>

        <div class="form-group">
          <label for="priceInput">Price</label>
          <input name="price" type="text" class="form-control" id="priceInput" placeholder="Enter Price" />
        </div>

        <div class="form-group">
          <label for="stockInput">Stock</label>
          <input name="stock" type="text" class="form-control" id="stockInput" placeholder="Enter Stock" />
        </div>
        

        <div class="form-group">
          <label for="fileInput">Picture</label>
          <input name="file" type="file" class="form-control" id="fileInput" />
        </div>

        <div class="form-group">
          <label for="categoryInput">Category</label>
          <select name="category" id="categoryInput" class="form-select" required>
            <option value="">Select a Category</option>
            <% categories.forEach(function(cat) { %>
              <option value="<%= cat._id %>"><%= cat.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group text-center mt-4">
          <button type="submit" class="btn-submit">Create New Product</button>
        </div>
      </form>
    </div>

    <div class="image-column">
      <img src="https://cdn-icons-png.flaticon.com/512/8746/8746045.png" alt="Product Illustration" />
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Select2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

  <script>
    // Initialize Select2 on category dropdown
    $(document).ready(function() {
      $('#categoryInput').select2({
        placeholder: 'Select a Category',
        allowClear: true,
        width: '100%'
      });
    });

    const slider = document.getElementById("themeSlider");
    const wrapper = document.getElementById("wrapper");

    slider.addEventListener("change", () => {
      wrapper.classList.toggle("light-mode", slider.checked);
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
