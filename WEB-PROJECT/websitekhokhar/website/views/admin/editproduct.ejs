<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Product</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f3f6fd;
      font-family: 'Segoe UI', sans-serif;
      color: #333;
      padding: 50px 0;
    }

    .edit-product-container {
      max-width: 700px;
      margin: auto;
      background: #ffffff;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    }

    .edit-product-container h4 {
      text-align: center;
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 30px;
      color: #2c3e50;
    }

    .form-label {
      font-weight: 600;
      color: #4a4a4a;
    }

    .form-control,
    .form-select {
      background-color: #f0f3fa;
      border: 1px solid #d0d6e2;
      border-radius: 12px;
      padding: 12px 16px;
      font-size: 15px;
      transition: 0.3s ease;
      color: #333;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #4f83ff;
      box-shadow: 0 0 0 0.2rem rgba(79, 131, 255, 0.2);
      background-color: #fff;
    }

    .form-text {
      color: #888;
      font-size: 13px;
    }

    .btn-submit {
      background: linear-gradient(to right, #5b8eff, #4a7edc);
      border: none;
      border-radius: 10px;
      padding: 12px;
      color: white;
      font-weight: 600;
      font-size: 16px;
      width: 100%;
      margin-top: 20px;
      transition: all 0.3s ease-in-out;
    }

    .btn-submit:hover {
      background: linear-gradient(to right, #4a7edc, #5b8eff);
      box-shadow: 0 8px 20px rgba(79, 131, 255, 0.25);
    }

    .image-preview {
      text-align: center;
      margin-top: 20px;
    }

    .image-preview img {
      max-width: 200px;
      border-radius: 10px;
      border: 1px solid #ccc;
    }
  </style>
</head>
<body>

  <div class="edit-product-container">
    <h4><i class="fas fa-pen-to-square me-2"></i>Edit Product</h4>
    
    <form action="" method="post" enctype="multipart/form-data">
      <div class="mb-4">
        <label for="titleInput" class="form-label">Title</label>
        <input
          name="title"
          type="text"
          class="form-control"
          id="titleInput"
          placeholder="Enter Title"
          value="<%= product.title %>"
          required
        />
        <div class="form-text">Enter the product name</div>
      </div>

      <div class="mb-4">
        <label for="descriptionInput" class="form-label">Description</label>
        <textarea
          name="description"
          class="form-control"
          id="descriptionInput"
          rows="4"
          placeholder="Enter Description"
          required
        ><%= product.description %></textarea>
        <div class="form-text">Detailed description of the product</div>
      </div>

      <div class="mb-4">
        <label for="priceInput" class="form-label">Price (PKR)</label>
        <input
          name="price"
          type="number"
          class="form-control"
          id="priceInput"
          placeholder="Enter Price"
          value="<%= product.price %>"
          required
        />
        <div class="form-text">Specify the price in Pakistani Rupees</div>
      </div>

      <div class="mb-4">
        <label for="categoryInput" class="form-label">Category</label>
        <select
          name="category"
          id="categoryInput"
          class="form-select"
          required
        >
          <option disabled>Select a category</option>
          <% categories.forEach(function(cat) { %>
            <option value="<%= cat._id %>" <%= String(product.category) === String(cat._id) ? 'selected' : '' %>>
              <%= cat.name %><%= String(product.category) === String(cat._id) ? ' (Current)' : '' %>
            </option>
          <% }) %>
        </select>
        <div class="form-text">Choose the appropriate category</div>
      </div>

      <div class="mb-4">
        <label for="fileInput" class="form-label">Product Image</label>
        <input
          name="file"
          type="file"
          class="form-control"
          id="fileInput"
        />
        <div class="form-text">Upload a new image to replace the old one</div>
      </div>

      <% if (product.picture) { %>
        <div class="image-preview">
          <p>Current Image:</p>
          <img src="/uploads/<%= product.picture %>" alt="Product Image" />
        </div>
      <% } %>

      <button type="submit" class="btn-submit">
        <i class="fas fa-save me-2"></i>Save Changes
      </button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
</body>
</html>
