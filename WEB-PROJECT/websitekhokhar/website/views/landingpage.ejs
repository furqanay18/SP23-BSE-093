      display: flex;
      align-items: center;
      gap: 10px;
    }

    .arrow-btn {
      font-size: 22px; /* Reduced font size */
      color: #fff;
      background: transparent;
      border: none;
      cursor: pointer;
    }

    .product-slider {
      display: flex;
      overflow: hidden;
      gap: 15px; /* Reduced gap */
      scroll-behavior: smooth;
      flex: 1;
    }

    .product-card {
