      border-radius: 10px;
      padding: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      text-align: center;
      flex-shrink: 0;
    }

    .product-card img {
      width: 100%;
      height: 100px; /* Reduced image size */
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 8px;
    }

    .product-card h3 {
      font-size: 14px; /* Reduced font size */
      margin: 5px 0;
    }

    .product-card p {
      color: #ff4747;
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .hot-container {
        flex-direction: column;
      }

      .sale-banner, .slider-wrapper {
        width: 100%;
      }

      .product-card {
        min-width: 120px; /* Reduced minimum width */
        height: 220px; /* Adjusted height for smaller screens */
      }
    }

    .contact-section {
