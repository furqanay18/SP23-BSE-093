  .footer-socials a {
    color: #bbb;
    margin-right: 14px;
    font-size: 18px;
    transition: 0.3s;
  }

  .footer-socials a:hover {
    color: #ff4747;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 40px;
    font-size: 14px;
    color: #777;
  }

  @media (max-width: 768px) {
    .footer-columns {
      flex-direction: column;
      text-align: center;
    }

    .footer-socials {
      justify-content: center;
      display: flex;
      margin-top: 10px;
    }
  }
  </style>
</head>
