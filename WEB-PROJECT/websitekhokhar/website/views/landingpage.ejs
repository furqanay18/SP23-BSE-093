  <style>
    :root {
      --primary-color: #ff4747;
      --bg-dark: #0f0f0f;
      --text-light: #e0e0e0;
      --glass: rgba(255, 255, 255, 0.05);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Outfit', sans-serif;
      background: radial-gradient(circle at top left, #121212, #0a0a0a);
      color: var(--text-light);
      overflow-x: hidden;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    .top-bar {
      background: #121212;
      padding: 12px 30px;
      font-size: 13px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #222;
    }

    .top-bar nav a {
      margin-left: 20px;
      color: #999;
      transition: color 0.3s ease;
    }

    .top-bar nav a:hover {
      color: #fff;
    }

    .main-nav {
      padding: 25px 40px;
      background: #1a1a1a;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
      position: sticky;
      top: 0;
      z-index: 999;
    }

    .logo {
      font-size: 28px;
      font-weight: 800;
      color: var(--primary-color);
    }

    .main-nav input, .main-nav select {
      padding: 10px 14px;
      margin: 5px;
      background: #2a2a2a;
      color: white;
      border: none;
      border-radius: 6px;
    }

    .contact-info {
      font-size: 14px;
      color: #aaa;
    }

    .icons i {
      margin-left: 16px;
      font-size: 18px;
      cursor: pointer;
      color: #ccc;
      transition: color 0.3s;
    }

    .icons i:hover {
      color: white;
    }

    .hero {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 80px 10%;
      background: linear-gradient(145deg, #121212 0%, #0a0a0a 100%);
      flex-wrap: wrap;
      min-height: 100vh;
    }

    .hero-text {
      flex: 1;
      max-width: 600px;
    }

    .hero-text h2 {
      font-size: 22px;
      color: #aaa;
      margin-bottom: 10px;
    }

    .hero-text h1 {
      font-size: 50px;
      margin-bottom: 25px;
      color: white;
    }

    .hero-text p {
      font-size: 18px;
      line-height: 1.6;
      color: #ccc;
      margin-bottom: 40px;
    }

    .hero-text button {
      padding: 14px 32px;
      font-size: 16px;
      font-weight: 600;
      color: white;
      background: var(--primary-color);
      border: none;
      border-radius: 10px;
      cursor: pointer;
      box-shadow: 0 10px 20px rgba(255, 71, 71, 0.3);
    }

    .hero-model {
      flex: 1;
      max-width: 500px;
      min-width: 300px;
      height: 500px;
    }

    model-viewer {
      width: 100%;
      height: 100%;
    }

    .promo-banners {
      display: flex;
      width: 100%;
      height: 400px;
      gap: 10px;
      padding: 20px;
    }

    .banner-large {
      width: 65%;
      height: 100%;
      position: relative;
      overflow: hidden;
      border-radius: 12px;
    }

    .banner-large img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(0.7);
    }

    .banner-text {
      position: absolute;
      top: 30px;
      left: 30px;
      color: white;
    }

    .banner-text h2 {
      font-size: 42px;
      font-weight: 800;
    }

    .banner-text p {
      font-size: 24px;
      background-color: rgba(0, 0, 0, 0.6);
      padding: 6px 12px;
      border-radius: 8px;
    }

    .banner-side {
      width: 35%;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .banner-side img {
      width: 100%;
      height: calc((100% - 20px) / 3);
      object-fit: cover;
      border-radius: 12px;
    }

    .hot-selling-section {
      background-color: #111;
      padding: 20px 10px; /* Reduced padding */
    }

    .hot-selling-header {
      font-size: 24px; /* Reduced size */
      font-weight: 700;
      color: #fff;
      margin-bottom: 15px; /* Reduced margin */
      text-align: center;
    }

    .hot-container {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: 10px; /* Adjusted gap */
    }

    .sale-banner {
      width: 15%; /* Reduced width */
    }

    .sale-banner img {
  width: 100%;
  height: 280px;
   /* limit height */
  
}

    .slider-wrapper {
