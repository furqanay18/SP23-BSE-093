<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxury Living</title>
    <style>
        /* Body background */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-image: url('/background.jpeg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        /* Container for left and right sections */
        .container {
            padding-top: 0%;
            display: flex;
            justify-content: space-between;
            width: 80%;
            height: 70%;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.5s ease, opacity 0.5s ease;
        }

        /* Left side - slogan */
        .left {
            width: 50%;
            opacity: 0;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: opacity 0.5s ease, width 0.5s ease;
        }

        .left h1 {
            font-size: 2.5rem;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        .left p {
            font-size: 1.2rem;
            color: white;
            text-align: center;
        }

        /* Right side - registration form */
        .right {
            
            width: 40%;
            padding: 10px;
            height: fit-content;;
            padding-top: 0px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgb(5, 5, 108);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            opacity: 1;
            transition: opacity 0.5s ease;
        }

        .register-form {
            width: 80%;
            max-width: 400px;
        }

        .register-form h3 {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: white;
        }

        .register-form label {
            display: block;
            margin-bottom: 10px;
            font-size: 1.1rem;
            color: white;
        }

        .register-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .register-form button {
            width: 100%;
            padding: 12px;
            background-color: black;
            color: white;
            border: none;
            border-radius: 60px;
            font-size: 1.1rem;
            cursor: pointer;
        }

        .register-form button:hover {
            background-color: #0056b3;
        }

        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .register-form a {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: white;
            text-decoration: none;
        }

        .register-form a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Container for left and right sections -->
    <div class="container">
        <!-- Left side: Catchy slogan -->
        <div class="left">
            <h1>Designing Dreams, One Room at a Time</h1>
            <p>Transform your space into something divine, where comfort and luxury intertwine!</p>
        </div>

        <!-- Right side: Register form -->
        <div class="right">
            <form method="POST" action="/register" class="register-form">
                <h3>Register</h3>
                <label>Name: <input type="text" name="name" required></label><br>
                <label>Email: <input type="email" name="email" required></label><br>
                <label>Password: <input type="password" name="password" required></label><br>
                <button type="submit">Register</button>

                <!-- Success or Error message -->
                <% if (success_msg) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                <% } %>
                <% if (error_msg) { %>
                    <div class="alert alert-danger"><%= error_msg %></div>
                <% } %>

                <!-- Link to Login page -->
                <a href="/login">Already have an account? Login here.</a>
            </form>
        </div>
    </div>

    <script>
        // Adding an event listener to the email input to trigger the transition
        const emailInput = document.querySelector("input[name='name']");

        emailInput.addEventListener("focus", function () {
            // Move the left side away and show the right side
            document.querySelector(".container").style.transform = "translateY(-5%)";
            document.querySelector(".left").style.opacity = "1";
            document.querySelector(".left").style.width = "50%";  // Fade out the left side
            document.querySelector(".right").style.opacity = "1";  // Ensure the right side remains visible
        });
    </script>

</body>

</html>
